<div class="flex">
  <span class="btn"><%= link_to "Create your cocktail", new_cocktail_path %></span>
</div>

<div class="container">
    <% @cocktails.each do |cocktail| %>
      <div class="card">
        <div class="card-category"></div>
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
          <h4><%= link_to "Details", cocktail_path(cocktail) %></h4>
        </div>
        <img class="card-user" src="https://farm3.staticflickr.com/2904/14822661241_483d9c027a_b.jpg">
        <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-times" aria-hidden="true"> delete </i>
        <% end %>
      </div>
    <% end %>
</div>
